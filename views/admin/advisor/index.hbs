<style>
  input,
  .modal {
    color: black;
  }

  .table-striped>tbody>tr:nth-child(2n + 1)>td,
  .table-striped>tbody>tr:nth-child(2n + 1)>th {
    background-color: #34495e;
  }

  .row .alert {
    margin-top: 25px;
  }

  th,
  td {
    border-top: none !important;
  }

  h3 {
    color: white;
    background-color: #333;
    padding: 12px;
    border-top-right-radius: 20px;
    font-weight: bolder;
    letter-spacing: .1em;
  }

  .modal-content {
    border-radius: 0;
  }

  .modal-header,
  .modal-footer {
    background-color: #333;
    color: white;
    border: 0;
  }

  .modal-body {
    background: #2c3e50;
    color: white;
  }

  .close,
  .close:hover {
    color: white;
  }

  .btn {
    font-weight: bolder;
    letter-spacing: .2em;
  }

  .page-content {
    background: #2c3e50 !important;
    color: white;
  }

  h1.page-title {
    font-family: 'Red Hat Display', sans-serif;
    font-weight: 900;
  }
