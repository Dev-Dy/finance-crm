<script src="https://unpkg.com/axios/dist/axios.min.js"></script>

<style>
  input,
  .modal {
    color: black;
  }

  .table-striped>tbody>tr:nth-child(2n + 1)>td,
  .table-striped>tbody>tr:nth-child(2n + 1)>th {
    background-color: #34495e;
  }

  .row .alert {
    margin-top: 25px;
  }

  th,
  td {
    border-top: none !important;
  }

  h3 {
    color: white;
    background-color: #333;
    padding: 12px;
    border-top-right-radius: 20px;
    font-weight: bolder;
    letter-spacing: .1em;
  }

  .modal-content {
    border-radius: 0;
  }

  .modal-header,
  .modal-footer {
    background-color: #333;
    color: white;
    border: 0;
  }

  .modal-body {
    background: #2c3e50;
    color: white;
  }

  .close,
  .close:hover {
    color: white;
  }

  .btn {
    font-weight: bolder;
    letter-spacing: .2em;
  }

  .page-content {
    background: #2c3e50 !important;
    color: white;
  }

  h1.page-title {
    font-family: 'Red Hat Display', sans-serif;
    font-weight: 900;
  }
</style>
<main class="l-main">
  <div class="content-wrapper content-wrapper--with-bg">
    <h1 class="page-title">Announcements</h1>
    <div class="page-content">
      <div class="row">
        <div class="col-md-4">
          <h3>Add Announcement</h3>
          <form id="addUser" action="">
            <div class="form-group" id="selectBoxPlanContainer">
              <label for="">Choose Plan</label>
              <select class="form-control" multiple="multiple" id="selectBoxPlan">
              </select>
            </div>
            <div class="form-group">
              <label for="">Stock</label>
              <select class="js-example-theme-single form-control" type="text" name="stock" id="stock" required>
              </select>
            </div>
            <div class="form-group">
              <label for="">Target 1</label>
              <input class="form-control" type="text" name="target_2" id="target_1" placeholder="Target 2" required>
            </div>
            <div class="form-group">
              <label for="">Target 2</label>
              <input class="form-control" type="text" name="target_2" id="target_2" placeholder="Target 2" required>
            </div>
            <div class="form-group">
              <label for="">Entry Point</label>
              <input class="form-control" type="text" name="entrypoint" id="entryPoint" placeholder="Entry Point" required>
            </div>
            <div class="form-group">
              <label for="">Stop Loss</label>
              <input class="form-control" type="text" name="stoploss" id="stopLoss" placeholder="Stop Loss" required>
            </div>
             <div class="form-group">
              <label for="">Message</label>
              <input class="form-control" type="text" name="message" id="message" placeholder="Message">
            </div>
            <button class="btn btn-primary form-control" type="submit">SUBMIT</button>
          </form>
        </div>
        <div class="col-md-8">
          <table id="patient-data" class="table table-striped">
            <thead>
              <tr>
                <th>Plan</th>
                <th>Stock</th>
                <th>T 1/T 2</th>
                <th>E.P./S.L.</th>
                <th>Status</th>
                <th>Remove</th>
                <th>Delete</th>
              </tr>
            </thead>
            <tbody>

            </tbody>
          </table>
        </div>
      </div>
    </div>

    <div class="modal fade" id="editUserModal" tabindex="-1" role="dialog" aria-labelledby="editUserModal">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h4 class="modal-title" id="editUser">Update Announcement</h4>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body"></div>
          <div class="modal-footer"></div>
        </div>
      </div>
    </div>
  </div>

</main>